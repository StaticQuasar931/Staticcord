rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{uid}/uploads/{path=**} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid && request.resource.size < 10 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
    match /servers/{serverId}/channels/{channelId}/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
